  <rootcheck>
    <disabled><%= ossec_rootcheck_enabled ? 'no' : 'yes' %></disabled>
    <frequency><%= @ossec_rootcheck_frequency %></frequency>
<%- if @kernel == 'Linux' -%>
    <check_dev><%= ossec_rootcheck_check_dev ? 'yes' : 'no' %></check_dev>
    <check_files><%= ossec_rootcheck_check_files ? 'yes' : 'no' %></check_files>
    <rootkit_files><%= @ossec_rootcheck_rootkit_files %></rootkit_files>
    <check_if><%= ossec_rootcheck_check_if ? 'yes' : 'no' %></check_if>
    <check_pids><%= ossec_rootcheck_check_pids ? 'yes' : 'no' %></check_pids>
    <check_ports><%= ossec_rootcheck_check_ports ? 'yes' : 'no' %></check_ports>
    <check_sys><%= ossec_rootcheck_check_sys ? 'yes' : 'no' %></check_sys>
    <check_trojans><%= ossec_rootcheck_check_trojans ? 'yes' : 'no' %></check_trojans>
    <rootkit_trojans><%= @ossec_rootcheck_rootkit_trojans %></rootkit_trojans>
    <check_unixaudit><%= ossec_rootcheck_check_unixaudit ? 'yes' : 'no' %></check_unixaudit>
    <system_audit><%= @ossec_rootcheck_system_audit %></system_audit>
    <skip_nfs><%= ossec_rootcheck_skip_nfs ? 'yes' : 'no' %></skip_nfs>
<%- elsif @kernel == 'windows' -%>
    <check_winaudit>yes</check_winaudit>
    <windows_audit>./shared/win_audit_rcl.txt</windows_audit>
    <check_winapps>yes</check_winapps>
    <windows_apps>./shared/win_applications_rcl.txt</windows_apps>
    <check_winmalware>yes</check_winmalware>
    <windows_malware>./shared/win_malware_rcl.txt</windows_malware>
<%- end -%>
  </rootcheck>
