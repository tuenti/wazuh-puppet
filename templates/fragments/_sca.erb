    <sca>
      <enabled>yes</enabled>
      <scan_on_start>yes</scan_on_start>
      <interval>12h</interval>
      <skip_nfs>yes</skip_nfs>

      <policies>
      <%- if @kernel == 'Windows' %>
        <%# TODO: add specific Windows policies %>
        <policy>sca_win_audit.yml</policy>
      <%- else -%>
        <policy>sca_unix_audit.yml</policy>
        <%- if @kernel == 'Linux' -%>
          <%- if @os['family'] == 'RedHat' -%> 
            <%- if @os['name'] == 'Amazon' -%>
        <%# No ruleset available for Amazon Linux %>
        <%# Empty if-body to disable EL rules%>
            <%- else -%>
        <policy>cis_rhel<%= @os['release']['major'] %>_linux.yml</policy>
        <policy>cis_rhel<%= @os['release']['major'] %>_linux.yml</policy>
        <policy>cis_rhel<%= @os['release']['major'] %>_linux.yml</policy>
            <%- end -%>
          <%- elsif @os['name'] == 'Debian' -%>
        <policy>cis_debian<%= @os['release']['major'] %>_L1.yml</policy>
        <policy>cis_debian<%= @os['release']['major'] %>_L2.yml</policy>
          <%- elsif @os['name'] == 'SLES' -%>
        <policy>cis_sles<%= @os['release']['major'] %>_linux.yml</policy>
          <%- end -%>
        <%- elsif @kernel == 'SunOS' -%>
          <%- if @os['name'] == 'Solaris' -%>
        <policy>cis_solaris<%= @os['release']['major'] %>.yml</policy>  
          <%- end -%>
        <%- elsif @kernel == 'Darwin' -%>
        <policy>cis_apple_macOS_<%= @os['macosx']['version']['major'] %>.yml
        <%- end -%>
        <%# TODO: move application rules somewhere else? %>
        <policy>web_vulnerabilities.yml</policy>
        <policy>cis_apache_24.yml</policy>
        <policy>cis_mysql5-6_community.yml</policy>
        <policy>cis_mysql5-6_enterprise.yml</policy>
      <%- end -%>
      </policies>
    </sca>

    
  